header
    position relative

.nav-container
    display flex
    justify-content center

.nav-box
    width 100%
    background-color $color-1
    opacity 0.77
    z-index 100
    position: absolute
    top: 0
    left 0

.header-slaider-box
    .viewport
        position relative    
        width 100%
        .header-slider-img
            position: absolute
            left: 18%;
            bottom: 38%;
        .header-substrate
            position absolute
            bottom 0
            width 100%
            height 190px
            

.nav-bar
    display flex
    width 100%
    padding-top 20px

nav
    width 100%
    display flex
    align-items center
    padding-left 45px
    padding-top 30px

    li
        &:hover
            >.submenu
                transform rotateX(0deg)
                visibility visible
                opacity 1
                background-color $color-1

.header-nav
    width 100%
    display flex
    justify-content space-between
    font-family "HelveticaNeueLTW1G-Lt"
    font-weight 400
    font-size 18px

    li
        position relative
        padding-bottom 18px

        >a
            color $color-2
            white-space nowrap

.submenu
    position fixed
    width 100%
    top 86px
    left 0
    visibility hidden
    overflow hidden
    opacity 0

    li
        padding 5px 5px
        padding 5px 15px

.submenu-container
    display flex

.subcity
    padding-left 185px
    font-size 14px

    ul
        li
            &:first-child
                color $color-2
                font-family "HelveticaNeueLTW1G-Bd"
                font-size 18px
                font-weight 400
                line-height 30px

.subdirection
    font-size 14px
    padding-left 185px

.subcountry
    font-size 14px
    padding-left 185px
.sub
    input
        background-color $color-4
        color $color-1
        border 1px solid $color-1

    input::-webkit-input-placeholder
        color $color-1

    input::-moz-placeholder
        color $color-1

.first
    padding-left 5px

    &:before
        content ''
        top 20px
        right 0
        height 20px
        width 15px
        color black
        background-color $color-1
        z-index 100

#subForm
    display none

.sub-form
    display flex
    flex-direction column
    position relative

    *:not(div)
        margin-bottom 10px

.icon-right-open
    position absolute
    right -30px
    bottom -5px
    font-size 30px
    cursor pointer
    color $color-1

.slick-arrow
    display none !important
//Конец HEADER!!!!!!!!
.audio-content-container
    display flex    
    justify-content center
    .audio-content-box
        padding: 50px 0 80px 0
        max-width 1330px
        .audio-main-caption
            color #5d5d5d
            font-family "HelveticaNeueLTW1G-Lt"
            font-size 16px
            line-height 20px
            p
                margin-bottom: 26px
                text-align justify
        .audio-router-block
            padding 38px 0 38px 0 
            ul
                display flex   
                justify-content space-between
                li
                    a   
                        color $color-2
                        text-transform uppercase
                        font-family "HelveticaNeueLTW1G-Lt"
        .audio-item-box
            .audio-item    
                box-shadow 9px 9px 10px rgba(0, 0, 0, 0.2)   
                margin-bottom 30px     
                .item-header
                    position relative    
                    height 122px        
                    display flex
                    align-items: center
                    .item-header-img
                        position absolute
                        right 0
                        top 0           
                        z-index 1
                        width 100%
                        height 100%
                        overflow hidden
                        img
                            position absolute
                            right 0
                            height 100%
                            max-width none
                            
                    .item-header-caption
                        z-index 3
                        display flex             
                        padding-left: 13px  
                        .header-caption-word
                            font-family "HelveticaNeueLTW1G-Th"
                            font-size 60px
                            color $color-1
                            z-index: 5
                            line-height 75px
                            cursor pointer
                            text-transform uppercase
                        .header-caption-direction
                            font-family "HelveticaNeueLTW1G-Lt"
                            font-size 18px    
                            color $color-1
                            display flex
                            align-items flex-end
                            padding-bottom 13px
                            margin-left 33px
                            cursor pointer
                    .item-header-arrow
                        position absolute
                        top 54px
                        right 14px
                        z-index 100000
                        img
                        &.rotate
                            transform: rotate(180deg)
                .player-item
                    display flex
                    padding: 35px 0px
                    .item-body-content
                        margin-left: 30px
                        .body-content-caption
                            display flex
                            font-family "HelveticaNeueLTW1G-Th"
                            flex-direction: column
                            .content-caption-word
                                font-size 18px
                                line-height: 23px
                                color #5d5d5d
                            .audio-name
                                color $color-2
                                font-size: 22px
                                line-height: 28px
                            .audio-link
                                a
                                    font-size 18px
                                    line-height: 23px
                                    color #5d5d5d
                    .body-content-player
                        margin-top: 41px
                        .content-player-link
                            a
                                color #5d5d5d
                                font-family "HelveticaNeueLTW1G-Th"
                                font-size 18px
                        .player-body
                            margin-top: 22px        

