.album-catalog
    background url('../img/album_bg1.png') -11% 114% , url('../img/bg2.png') 101% -8%, url('../img/bg3.png') 104% 116%
    background-repeat no-repeat 


.album-catalog-container
    padding-top: 60px
    padding-bottom: 77px
    display flex
    justify-content center
    .album-catalog-box
        width 100%



.album-area
    display grid
    grid-gap 22px
    grid-template-columns: repeat(6, 1fr)
    grid-auto-rows auto
    .album-item 
        &:nth-child(1) 
            grid-column 1/4
            grid-row 1/3
            height 658px
        &:nth-child(2) 
            grid-column 4/7
            grid-row 1/2
            height 100%

        &:nth-child(3) 
            grid-column 4/7
            grid-row 2/3
            height 100%
        &:nth-child(4) 
            grid-column 1/3
            grid-row 3/4
            height 335px
        &:nth-child(5) 
            height 300px
            grid-column 3/5
            grid-row 3/4
            height 335px
        &:nth-child(6) 
            grid-column 5/7
            grid-row 3/4
            height 335px
        &:nth-child(7) 
            grid-column 1/4
            grid-row 4/5
            height 599px
           
        &:nth-child(8) 
            grid-column 4/7
            grid-row 4/5
            height 599px
        &:nth-child(9) 
            grid-column 1/4
            grid-row 5/7
            height 658px
        &:nth-child(10) 
            grid-column 4/7
            grid-row 5/6
            height 100%
        &:nth-child(11) 
            grid-column 4/7
            grid-row 6/7
            height 100%
        &:nth-child(12) 
            grid-column 1/3
            grid-row 7/8
            height 335px

        &:nth-child(13) 
            grid-column 3/5
            grid-row 7/8
            height 335px
        &:nth-child(14) 
            grid-column 5/7
            grid-row 7/8
            height 335px
        &:nth-child(15) 
            grid-column 1/4
            grid-row 8/9
            height 599px
        &:nth-child(16) 
            grid-column 4/7
            grid-row 8/9   
            height 599px                 
    


.album-area
    .album-item
        width 100%
        
        position relative
        overflow hidden
        display flex
        justify-content center
        align-items center
        border 2px solid white
        box-shadow: 16px 16px 13px rgba(0, 0, 0, 0.4)
        .album-item-word
            background-repeat no-repeat
            background-size cover
            font-family: "HelveticaNeueLTW1G-Th"
            z-index: 3
            width: 100%
            display flex
            flex-direction column
            position absolute
            font-size: 26px;
            font-weight: 400;
            line-height: 34.17px;
            a
                
                color #fff
            .item-word-date
                font-size: 20px
            div
                margin-left: auto
                margin-right: auto
        .album-item-img
            height 100%
            width 100%
            position absolute
            display flex
            justify-content center
            align-items center
            img
                position absolute
                max-width initial
                width initial
        .album-substrate
            width 100%
            height 100%
            background-color rgba(0, 0, 0, 0.6);
            z-index: 2
        &:hover
            .album-item-word
                background-image url("../img/bg.png")
                a
                    font-family: "HelveticaNeueLTW1G-Bd";

            .album-substrate    
                background-color rgba(0, 0, 0, 0.0);

             

       
        




