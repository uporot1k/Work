.mouse-anim{
    animation: mouse-anim linear 2s;
    animation-iteration-count: infinite;
    transform-origin: 50% 50%;
}
.ripple {
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0);
  position: absolute;
  opacity: 1;
}
.rippleEffect {
    animation: rippleDrop .6s linear;
}
