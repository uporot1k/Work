.offer
    padding-top: 86px
    padding-bottom: 55px
    background-image url('../img/bg-1.png'), url('../img/bg-2.png'), url('../img/bg-3.png')
    background-position  -9% 128%, 100% -19%, 105% 130%
    background-repeat no-repeat
    .offer-container
        margin-top: 95px
        display flex
        flex-direction: column
        .offer-word
            display flex
            justify-content center
            color $color-4
            font-family "HelveticaNeueLTW1G-Th"
            font-size 60px
            font-weight 400
            line-height 27px
        .offer-content-box   
            display flex
            justify-content center
            padding-top: 84px
            .offer-content
                 width 550px
                form
                    .offer-info
                    .tourist-item
                        width 100%
                        color $color-2
                        font-family "HelveticaNeueLTW1G-Roman"
                        font-size 24px
                        display flex
                        flex-flow: wrap
                        justify-content space-between
                        
                        .offer-label
                            position relative
                            display flex
                            width 255px
                            flex-direction: column
                            margin-top: 27px
                            span
                                margin-bottom: 8px
                            &.small
                                select
                                input
                                    width 140px
                                
                                    
                            &.short
                                input
                                    width 210px 
                                select   
                                    width 210px   
                                i
                                    position absolute
                                    right 12px
                                    bottom 9px

                            &.midlle
                                width 330px  
                            &.long
                                width 330px
                                #file-wrapper
                                    width 100%
                                    min-height 40px   
                                    border 1px dashed #9e9e9e 
                                    color #9e9e9e   
                                    font-family "HelveticaNeueLTW1G-Th"
                                    font-size 18px     
                                    padding-top: 10px
                                    padding-left: 66px
                                    .list-files
                                        max-width 250px
                                        word-wrap break-word
                                    #file
                                        display none
                                        opacity 0
                                        span
                                            position relative 
                                            i
                                                position: absolute
                                                top 2px
                                                left -30px
                                           
                            &.big
                                width 100% 
                            &.max
                                width: 100%  
                                flex-flow: row
                                color #1a1a1d
                                font-family "HelveticaNeueLTW1G-Lt"
                                font-size 14px
                                align-items: center
                                input
                                    height: 17px
                                    width: 17px 
                                    position: relative
                                    &:before
                                        position: absolute
                                        content: ''
                                        top: 0
                                        left 0
                                        width: 100%
                                        height: 100%
                                        background-color: #fff
                                        border 2px solid $color-2
                                    &:checked
                                        &:after
                                            position: absolute
                                            content: '\2713 '
                                            top: 0px
                                            left 4px
                                            color: $color-2
                                            width: 100%
                                            height: 100%
                                            
                                           

                                a
                                    color $color-2
                                    text-decoration: underline
                             input
                            select
                                
                                width 100%
                                height 40px
                                padding-top: 4px
                                padding-left: 5px
                                position: relative;
                                appearance: none;
                                font-size: 18px
                            input[type=checkbox]
                                font-size: 13px    
                            select
                               padding-top: 0px
                                    
                                
                            textarea {
                                resize: none;
                                padding-left: 5px
                                }  
                    .tourist-item
                                    
                        &:not(:first-child)
                            margin-top: 30px
                            border-top 6px solid $color-2       
                    .btn-addit
                        width 238px
                        height 40px
                        box-shadow 0 0 7px 2px rgba(0, 0, 0, 0.14)
                        background-image linear-gradient(to bottom, #2e9979 0%, #2e74c3 100%) 
                        color #ffffff
                        font-family "HelveticaNeueLTW1G-Th"
                        font-size 18px
                        padding-top: 10px 
                        padding-left: 52px 
                        cursor pointer
                        display flex
                        margin-top: 27px
                        span
                            position relative
                            i
                                position absolute     
                                left -30px
                           
                    #form-submit
                        margin-top: 40px
                        width 328px
                        height 40px
                        box-shadow 0 0 7px 2px rgba(0, 0, 0, 0.14)
                        background-image linear-gradient(to bottom, #2e9979 0%, #2e74c3 100%)
                        color: $color-1
                        font-family "HelveticaNeueLTW1G-Th"
                        font-size: 17px
                        padding-left: 110px
                        display flex
                        align-items center
                        margin-left: auto
                        margin-right: auto
                        cursor: pointer
                        span
                            position relative
                            i
                                position absolute
                                left -30px
                         

                                
