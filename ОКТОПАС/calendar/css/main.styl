header
    position relative

.nav-container
    display flex
    justify-content center

.nav-box
    width 100%
    background-color $color-1
    opacity 0.77
    z-index 100
    position: absolute
    top: 0
    left 0

.header-slaider-box
    .viewport
        position relative    
        width 100%
        .header-slider-word
            position: absolute
            bottom: 40px
            left 15%
            color $color-1
            text-transform uppercase
            font-family "HelveticaNeueLTW1G-Th"
            font-size 60px
            font-weight 400
            line-height 46.96px
            z-index 2
        .header-substrate
            position absolute
            bottom 0
            width 100%
            height 190px
            

.nav-bar
    display flex
    width 100%
    padding-top 20px

nav
    width 100%
    display flex
    align-items center
    padding-left 45px
    padding-top 30px

    li
        &:hover
            >.submenu
                transform rotateX(0deg)
                visibility visible
                opacity 1
                background-color $color-1

.header-nav
    width 100%
    display flex
    justify-content space-between
    font-family "HelveticaNeueLTW1G-Lt"
    font-weight 400
    font-size 18px

    li
        position relative
        padding-bottom 18px

        >a
            color $color-2
            white-space nowrap

.submenu
    position fixed
    width 100%
    top 86px
    left 0
    visibility hidden
    overflow hidden
    opacity 0

    li
        padding 5px 5px
        padding 5px 15px

.submenu-container
    display flex

.subcity
    padding-left 185px
    font-size 14px

    ul
        li
            &:first-child
                color $color-2
                font-family "HelveticaNeueLTW1G-Bd"
                font-size 18px
                font-weight 400
                line-height 30px

.subdirection
    font-size 14px
    padding-left 185px

.subcountry
    font-size 14px
    padding-left 185px






.sub
    input
        background-color $color-4
        color $color-1
        border 1px solid $color-1

    input::-webkit-input-placeholder
        color $color-1

    input::-moz-placeholder
        color $color-1

.first
    padding-left 5px

    &:before
        content ''
        top 20px
        right 0
        height 20px
        width 15px
        color black
        background-color $color-1
        z-index 100

#subForm
    display none

.sub-form
    display flex
    flex-direction column
    position relative

    *:not(div)
        margin-bottom 10px

.icon-right-open
    position absolute
    right -30px
    bottom -5px
    font-size 30px
    cursor pointer
    color $color-1

.slick-arrow
    display none !important
