.calendar-event-content
    height 523px
    width 853px
    overflow-y: scroll
    .event-item
        display flex
        justify-content spase-between
        padding 25px 0
        .item-date-box
            margin-right 24px
            color $color-2
            font-family "HelveticaNeueLTW1G-Lt"
            font-size 18px
            text-align: right
            line-height: 23px;
            .item-date-number
                font-size 24px
                  
        .item-body
            margin-top -1px
            width 456px
            color #000000
            font-family "HelveticaNeueLTW1G-Lt"
            font-size 18px
            line-height 21px
            margin-right 88px
            cursor pointer
            &.active
                color #0066b3
                font-family "HelveticaNeueLTW1G-Md_0"
        .item-btn
            margin-top 3px
            width 159px
            height 42px
            background-image url('../img/bg.png')
            background-repeat round
            display flex
            align-items center
            justify-content: center
            box-shadow 2px 4px 7px rgba(0, 0, 0, 0.39)
            a
                color $color-1
                font-family "HelveticaNeueLTW1G-Lt"
                font-size 19px
                font-weight 400  
    &::-webkit-scrollbar 
        height 380px
        width: 5px;
    &::-webkit-scrollbar-track 
        background-color #edecec
    &::-webkit-scrollbar-thumb 
        box-shadow 0 0 18px 3px rgba(0, 0, 0, 0.23)
        background-image: linear-gradient(to bottom, #1f8f70, #008b8c, #0084a9, #0079bd, #1f68bf);
    .event-item
        &:nth-child(1)
            padding 0 0 25px 0

.current-month-box,
.next-month-box
    margin-left: auto
    margin-right: auto
.current-month
    background-image url('../img/bgcur.png')
    background-repeat no-repeat
    background-position -28px -138px
    padding-top 53px 
    padding-bottom: 34px
.next-month
    padding-top 53px 
    padding-bottom: 42px   
    background-image url('../img/bgcur_2.png') 
    background-repeat no-repeat
    background-position: 103% 100%;

    
.next-month
    box-shadow 0 0 18px 3px rgba(0, 0, 0, 0.23)
.next-month-container 
    min-width 1460px

.calendar-box
    display: flex;
    justify-content: space-between;
.calendar-event-box
    margin-top: 72px

.calendar-content
    .calendar-word
        color $color-2
        font-family "HelveticaNeueLTW1G-Th"
        font-size 30px
        font-weight 400
        display flex
        justify-content center
        text-transform uppercase
        margin-bottom:11px
    .calendar
        width 547px
        tbody
            background-color #fff
            width 100%
            tr  
                display flex
                flex-flow wrap
                width: 100%
                height 87px
                border-bottom 2px solid #b2b2b2
                td
                    cursor pointer
                    width calc(100% / 7)
                    height 100%
                    display flex
                    justify-content center
                    align-items center
                    color $color-2
                    font-family "HelveticaNeueLTW1G-Th"
                    font-size 20px
                    font-weight 400
                    &:nth-child(6)
                        font-family "HelveticaNeueLTW1G-Roman"
                    &:nth-child(7)
                        font-family "HelveticaNeueLTW1G-Roman"
                    &.active
                        color #0066b3
                        font-family "HelveticaNeueLTW1G-Md_0"   
                &:first-child
                    text-transform uppercase 
                            
                &:last-child
                    border none    
                    

.adv-banner-box
    width 100%
    margin-top: 26px
    .adv-banner-item
        margin: 25px 0
        background-image: linear-gradient(to bottom, #b2d9cd, #aad7d6, #a7d5df, #a9d1e5, #b2cce8);
        padding: 5px
        .banner-item-content
            background-color #fff
            display flex
            .banner-item-img
                width 55%
                height 277px
                background-image url('../img/banner_img.png')
                background-repeat no-repeat
                background-size contain
            .banner-item-body
                padding: 26px 23px 17px 0   

                width: 45%
                color: $color-2
                font-family "HelveticaNeueLTW1G-Lt"
                font-size 18px
                font-weight 400
                .item-body-name
                    font-size: 24px
                    line-height: 25px;
                .item-body-data
                    display flex
                    flex-flow: nowrap
                .item-body-caption
                    margin-top: 24px
                    color: #000
                    line-height: 21px;
                .item-body-link
                    a
                        color $color-2
                        line-height: 24px;
                
            
