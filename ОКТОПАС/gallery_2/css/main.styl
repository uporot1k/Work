header
    position relative
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.25);

.nav-container
    display flex
    justify-content center

.nav-box
    width 100%
    background-color $color-1
    opacity 0.77
    z-index 100

.nav-bar
    display flex
    width 100%
    padding-top 20px

nav
    width 100%
    display flex
    align-items center
    padding-left 45px
    padding-top 30px

    li
        &:hover
            >.submenu
                transform rotateX(0deg)
                visibility visible
                opacity 1
                background-color $color-1

.header-nav
    width 100%
    display flex
    justify-content space-between
    font-family "HelveticaNeueLTW1G-Lt"
    font-weight 400
    font-size 18px

    li
        position relative
        padding-bottom 18px

        >a
            color $color-2
            white-space nowrap

.submenu
    position fixed
    width 100%
    top 86px
    left 0
    visibility hidden
    overflow hidden
    opacity 0

    li
        padding 5px 5px
        padding 5px 15px

.submenu-container
    display flex

.subcity
    padding-left 185px
    font-size 14px

    ul
        li
            &:first-child
                color $color-2
                font-family "HelveticaNeueLTW1G-Bd"
                font-size 18px
                font-weight 400
                line-height 30px

.subdirection
    font-size 14px
    padding-left 185px

.subcountry
    font-size 14px
    padding-left 185px

.header-slaider-box
    width 100%
    box-shadow: 0 0 16px rgba(0, 0, 0, 0.83);
    .viewport
        display flex
        justify-content center
        position relative
        overflow hidden
        height 541px
        .main-detail-img
            width 100%
            img
                width auto 
                height auto
                max-width inherit
        .detail-img-caption
            z-index 3
            max-width 815px
            position: absolute
            top 14.5%
            .img-caption-word
                font-size: 60px
            .img-caption-name
                margin-top: 31px
                line-height: 34px
                font-size: 30px
            .img-caption-date
                line-height: 34px
                font-size: 30px
            .img-caption-body
                
                line-height: 21px
                margin-top: 18px
                font-size: 18px
                font-family: "HelveticaNeueLTW1G-Lt"
                text-align: justify
                display flex
                flex-direction: column

            div
                display flex
                justify-content center
                font-family: "HelveticaNeueLTW1G-Th"
                color $color-1
        .header-substrate
            position: absolute
            top 0
            z-index 2
            background black
            width 100%
            height 100%
            opacity 0.4





.sub
    input
        background-color $color-4
        color $color-1
        border 1px solid $color-1

    input::-webkit-input-placeholder
        color $color-1

    input::-moz-placeholder
        color $color-1

.first
    padding-left 5px

    &:before
        content ''
        top 20px
        right 0
        height 20px
        width 15px
        color black
        background-color $color-1
        z-index 100

#subForm
    display none

.sub-form
    display flex
    flex-direction column
    position relative

    *:not(div)
        margin-bottom 10px


