.fancybox-content
    padding: 0
.current-month-popup
,.next-month-popup
    display none
    .popup-container
        .popup-convert
            .popup-box
                .popup-img
                    img
                        width 100%
                .popup-content-box
                    padding: 37px 130px 48px 153px
                    background-image url('../img/popupbg1.png'), url('../img/popupbg2.png')
                    background-repeat no-repeat
                    background-position 0 103% , 100% 100%
                    .popup-content
                        display flex
                        justify-content space-between
                        .popup-body
                            .popup-title
                                color $color-2
                                font-family "HelveticaNeueLTW1G-UltLt"
                                font-size 60px
                                margin-bottom: 10px
                            .popup-annotation
                                color #000000
                                font-family "HelveticaNeueLTW1G-Lt"
                                font-size 18px    
                                max-width: 878px
                                text-align justify
                                line-height: 22px;
                        .popup-info
                            margin-top -14px
                            .info-city,
                            .info-date,
                            .info-time
                                display flex
                                justify-content center
                                flex-direction column
                                color $color-2
                                font-family "HelveticaNeueLTW1G-Lt"
                                font-size 20px
                                font-weight 400
                                height: 110px
                                align-items: flex-end
                                &::after
                                    content ''
                                    width: 214px 
                                    height 3px
                                    background-image url('../img/border-bottom.png')
                                div
                                    margin-left: auto
                                    margin-right: auto
                                    &:first-child
                                        margin-bottom: 9px
                                     &:nth-child(2)
                                        margin-bottom: 11px   
                            .info-time
                                margin-bottom: 39px             
                            .info-btn
                                margin-left: auto
                                margin-right: auto
                                width 137px
                                height 36px
                                display flex
                                justify-content center
                                align-items center
                                background-image: linear-gradient(to bottom, #00815e, #007d7e, #0076a0, #006ab7, #0055b7);
                                a
                                    color: $color-1
                                    font-family "HelveticaNeueLTW1G-Lt"
                                    font-size 20px

