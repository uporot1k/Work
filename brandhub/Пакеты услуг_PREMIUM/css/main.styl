@import 'help.styl'
@import 'animation.styl'

header 
	position fixed
	top: 0
	background-color #fff
	z-index: 100
	height 75px
	width 100%
	display flex
	align-items: center
	border-bottom:1px solid #0068ff;
	.header-container
		width 100%
		display flex
		justify-content: flex-start;
	.main-logo
		margin-left 67px
		width 210px
		
		img
			height 32px

	nav
		margin-top: 9px
		width 100%
		margin-left: 138px
		.header-nav
			width 70%
			display flex
			justify-content space-between
			li
				padding: 0 20px

				a
					width 100%
					margin-top:auto
					margin-bottom:auto
					font-family: "GraphikRegular"
					color #4b4b4b
					font-size 12px
					font-weight 400
					line-height 14px
					text-decoration: none
				&.current
					position relative
					&:after
						content ''
						position: absolute
						bottom -30px
						left 0
						height 5px
						width 100%
						background-color #0068ff	
	.header-btn
		display none
		margin-right: 47px
		width 324px
		justify-content space-between
		.signUp
			width 157px
			height 37px
			border-radius 30px
			border 2px solid #0068ff
			display flex
			justify-content center
			align-items: center
			color #4b4b4b
			font-family: "GraphikRegular"
			font-size: 12px
			a
				color #4b4b4b
				font-family: "GraphikRegular"
				font-size: 12px
				text-decoration: none
		.signIn
			width 145px
			height 37px
			border-radius 30px
			background-color #0068ff
			color #fff
			font-family: "GraphikRegular"
			font-size: 12px
			display flex
			justify-content center
			align-items: center
			margin-left: 22px
			a
				color #fff
				font-family: "GraphikRegular"
				font-size: 12px
				text-decoration: none
.main-banner
	margin-top 75px
	width 100%
	height 865px
	background-color #0068ff
	background-image linear-gradient(123deg, rgba(0, 148, 255, 0) 0%, rgba(255, 255, 255, 0) 100%)
	position relative
	overflow hidden
	.header-breadcrumb
		z-index 10
		width 100%
		position: absolute
		top 30px
		font-size: 12px
		font-family "GraphikRegular"
		color: #ffffff
		a
			color: #fff
	.banner-text
		position: absolute
		width 100%
		top 272px
		.text-img
			margin-bottom 18px	
		.text-content
			color #ffffff
			text-transform: uppercase
			font-family: "GraphikSemibold";
			position relative
			.service-packet
				font-size: 24px;
				font-weight: 600;
				line-height: 76px;
			.packet-name
				font-size: 82px
				padding-bottom: 28px
				margin-bottom: 27px
				border-bottom: 20px solid #fff
			.packet-caption	
				font-family "GraphikRegular"
				font-size: 24px;
				text-transform: none
			.content-img
				position: absolute	
				right 0
				bottom -50%
		.banner-mouse
			width 28px
			height 57px
			img
				width 100%		


footer
	background-color #4b4b4b
	position relative
	.footer-word
		transform: rotate(-90deg)
		position: absolute
		top 178px
		left 0
		color #ffffff
		a
			text-decoration: none 
			color #ffffff
			font-family "GraphikRegular"
			font-size 13px
			font-weight 400
			line-height 15px
			&:hover
				color:#EC6608
			
			

	.footer-container
		display flex
		padding-top: 80px
		padding-bottom: 147px
		max-width: 940px
		margin-left: auto
		margin-right: auto
		.footer-nav-box

			display flex
			flex-grow: 1
			.footer-nav
				margin-top: 15px
				display flex
				flex-flow: column
				li
					padding: 14px 0
				a
					text-decoration: none 
					color #ffffff
					font-family "GraphikRegular"
					font-size 13px
					font-weight 400
					line-height 15px
					&:hover
						color:#EC6608
		.footer-info-box
			max-width 406px
			display flex
			flex-grow: 1
			flex-flow: column
			.info-box-word
				
				img
					
					height 64px		

			.info-box-caption
				margin-top 50px
				color #ffffff
				font-family "GraphikRegular"
				font-size 14px
				font-weight 400
				line-height 16px
				text-align: right
				a
					color #ffffff
					font-family "GraphikRegular"
					font-size 14px
					font-weight 400
					line-height 16px
					text-decoration: none
				.box-caption-address
					display flex
					justify-content flex-end
					p
						width 195px
				div
					margin-top: 16px		




@media screen and (max-width 1500px)
	header
		nav
			margin-left: 0
	.advantage
		.advantage-container
			.advantage-item-container
				flex-flow: wrap
				.advantage-item
					width 50%
					.item-word
						margin-left: auto
						margin-right: auto
					.item-caption
						margin-left: auto
						margin-right: auto
	.work-alg
		.work-alg-content
			.content-body
				.body-img	
					width 500px
					overflow hidden	
					right -474px
@media screen and (max-width 1350px)	
	header
		nav
			.header-nav
				width: 80%		
	.main-banner
		.banner-text	
			left 202px		