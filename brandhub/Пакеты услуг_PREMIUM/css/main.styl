.slick-dots 
	bottom: -43px;
	li 
	
		button
			&:before
				transform: scale(2)
				color: #0068ff;
		&.slick-active			
			button
				&:before
					transform: scale(2)
					opacity 1;
					color: #0068ff;
.current:after{
	animation-name current1
    animation-duration 1s
}
@keyframes current1 {
  from {
    opacity 0
  }
  to {
    opacity 1
  }
}

@media screen and (max-width 1500px)
	header
		nav
			margin-left: 0
	.advantage
		.advantage-container
			.advantage-item-container
				flex-flow: wrap
				.advantage-item
					width 50%
					.item-word
						margin-left: auto
						margin-right: auto
					.item-caption
						margin-left: auto
						margin-right: auto
	.work-alg
		.work-alg-content
			.content-body
				.body-img	
					width 500px
					overflow hidden	
					right -474px
@media screen and (max-width 1350px)	
	header
		nav
			.header-nav
				width: 80%		
	.main-banner
		.banner-text	
			left 202px		